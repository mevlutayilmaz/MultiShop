@model UpdateFeatureSliderDTO

@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Güncelleme</h4>
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label>Kategori Id</label>
                        <input type="text" readonly class="form-control" asp-for="Id" />
                        <br />
                        <label>Öne Çıkan Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Öne Çıkan Açıklaması</label>
                        <input type="text" class="form-control" asp-for="Description" />
                        <br />
                        <label>Öne Çıkan Görseli</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn btn-primary">Öne Çıkanı Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

