@model UpdateOfferDiscountDTO

@{
    ViewData["Title"] = "UpdateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>İndirim Teklifi Güncelleme</h4>
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label>İndirim Teklif Id</label>
                        <input type="text" readonly class="form-control" asp-for="Id" />
                        <br />
                        <label>İndirim Teklif Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>İndirim Teklif Alt Başlığı</label>
                        <input type="text" class="form-control" asp-for="SubTitle" />
                        <br />
                        <label>İndirim Teklif Buton Başlığı</label>
                        <input type="text" class="form-control" asp-for="ButtonTitle" />
                        <br />
                        <label>İndirim Teklif Görseli</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn btn-primary">İndirim Teklifini Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

