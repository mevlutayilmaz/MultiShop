@model CreateCategoryDTO

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Ekleme</h4>
                <p>Kategori ile ilgili ekleme işlemlerinizi bu panelden yapabilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    
                    <form method="post" enctype="multipart/form-data">
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="Name"/>
                        <br />
                        <label>Kategori Görseli</label>
                        <input type="file" class="form-control" asp-for="File" />
                        <br />
                        <button class="btn btn-primary">Kategoriyi Ekle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>


