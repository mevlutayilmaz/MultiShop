@model List<ResultCategoryDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Tablosu</h4>
                <p>Kategori ile ilgili işlemlerinizi bu tablodan yapabilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Kategori Ürünleri</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Name</td>
                                    <td><a href="#" class="btn btn-warning">Kategoriye Ait Ürünler</a></td>
                                    <td><a href="/Admin/Category/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Category/UpdateCategory/@item.Id" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>

