@model BasketTotalDTO

<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Products</h6>
        @foreach (var item in Model.BasketItems)
        {
            <div class="d-flex justify-content-between align-items-center" style="gap: 20px;">
                <p style="display: flex; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 70%;" title="@item.ProductName">
                    <span style="overflow: hidden; text-overflow: ellipsis;">@item.ProductName</span>
                    <span>&nbsp;(@item.Quantity)</span>
                </p>
                <p>@((item.Price * item.Quantity).ToString("C"))</p>
            </div>
        }
    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Subtotal</h6>
            <h6>@Model.TotalPrice.ToString("C")</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Shipping</h6>
            <h6 class="font-weight-medium">₺50</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Total</h5>
            <h5>@((Model.TotalPrice + 50).ToString("C"))</h5>
        </div>
    </div>
</div>
