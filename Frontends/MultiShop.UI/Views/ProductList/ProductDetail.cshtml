
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid pb-5">
    <div class="row px-xl-5">

        @await Component.InvokeAsync("_ImageSliderProductDetailComponentPartial", new { id = ViewBag.id })
        @await Component.InvokeAsync("_FeatureProductDetailComponentPartial", new { id = ViewBag.id })

    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Description</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Information</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Reviews (@ViewBag.commentCount)</a>
                </div>
                <div class="tab-content">

                    @await Component.InvokeAsync("_DescriptionProductDetailComponentPartial", new { id = ViewBag.id })
                    @await Component.InvokeAsync("_InformationProductDetailComponentPartial", new { id = ViewBag.id })
                    @await Component.InvokeAsync("_ReviewsProductDetailComponentPartial", new { id = ViewBag.id })

                </div>
            </div>
        </div>
    </div>
</div>

